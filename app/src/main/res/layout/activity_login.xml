<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/display"
    android:orientation="vertical"
    android:background="@drawable/watershed"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterActivity"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/statusbar_gradient_bg"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">



        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/fab_margin"
            android:padding="3dp"
            android:src="@mipmap/ic_app_logo"
            app:civ_border_color="#FFF"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amsterdam"
            android:paddingStart="12dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="@string/app_name"
            android:textColor="#FFB700"
            android:textSize="15sp" />

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bgcard"
        android:layout_centerHorizontal="true">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/kanit_bold"
            android:text="Welcome Back"
            android:textColor="@color/navy_blue"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/quicksand_book"
            android:text="Water Accessibility for all"
            android:textColor="#3A3A3A"
            android:textSize="12sp" />




            />
        <EditText

            android:background="@drawable/bg_editext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textColor="@color/navy_blue"
            android:textColorHint="@color/navy_blue"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:drawablePadding="10dp"
            android:id="@+id/login_email"
            android:padding="16dp"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/quicksand_book"
            android:hint="staff email/username"
            android:maxLines="1"
            android:singleLine="true"

            android:drawableStart="@drawable/email"
            />

        <EditText

            android:background="@drawable/bg_editext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textColor="@color/navy_blue"
            android:textColorHint="@color/navy_blue"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:drawablePadding="10dp"
            android:padding="16dp"


            android:id="@+id/login_password"

            android:inputType="textPassword"
            android:drawableStart="@drawable/password"

            android:fontFamily="@font/quicksand_book"


            android:hint="@string/password"

            />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="lOG In"
            android:textStyle="bold"
            android:clickable="true"
            android:textColor="@color/white"
            android:background="@drawable/layout_special"
            android:layout_gravity="center"
            android:focusable="true" />


    </LinearLayout>


</RelativeLayout><?xml version="1.0" encoding="utf-8"?>


