<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:clickable="true"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:id="@+id/surveyLayout"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">


            <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#008080"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/sourceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="River Yala"
                    android:textColor="@color/coral"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/sourceCounty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Garissa"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/sourceSubCounty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Warden"
                    android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/sourceWard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Warden"
                    android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:layout_height="3dp"></View>





        <RelativeLayout
            android:id="@+id/linear_layout_post"


            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sourceImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/chaniafalls" />
        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:layout_height="3dp"
       />

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_below="@id/sourceImage"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"

            android:background="@color/teal900">

            <ImageButton
                android:background="@color/teal900"
                android:id="@+id/like_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

            <TextView
                android:id="@+id/likes_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:text="0"
                android:textColor="@color/navy_blue"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="likes"
                android:layout_gravity="center_vertical"
                android:textColor="@color/navy_blue"
                android:textSize="14sp"
                android:textStyle="bold" />


            <ImageButton
                android:id="@+id/share_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/todo"
                android:background="@color/teal900"
                android:padding="15dp"
                app:srcCompat="@drawable/ic_baseline_share_24" />





            <ImageButton
                android:id="@+id/watchVideo"
                android:background="@color/teal900"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/todo"

                android:padding="15dp"
                app:srcCompat="@drawable/ic_baseline_videocam_24" />



â‰ˆ


        </LinearLayout>

            </LinearLayout>








</androidx.cardview.widget.CardView>
